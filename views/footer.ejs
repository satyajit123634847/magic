<script>
    $(document).ready(function () {
        $('#enquiry_btn').click(() => {
            $('.popupForm').toggle();
            $("#enquiry_btn").css("display", "none")
        });

        $('#close_pop').click(() => {
            $('.popupForm').toggle();
            $("#enquiry_btn").css("display", "block")
        });


        $('#send_email_sub_email').click(() => {

            if ($("#sub_email").val() == "") {
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.error("Please enter email...!", '', { timeOut: 3000 })

            } else {
                var obj = new Object()
                obj.email = $("#sub_email").val()


                var $request = $.ajax({
                    url: `http://35.78.201.111:3006/users/send-email-sub`,
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json",
                    data: JSON.stringify(obj),
                });

                $request.done(function (data) {

                    if (data.status) {
                        $("#sub_email").val("")
                        toastr.options.positionClass = 'toast-bottom-right';
                        toastr.success("Thanks, we connect you soon..!", '', { timeOut: 3000 })

                    } else {
                        toastr.options.positionClass = 'toast-bottom-right';
                        toastr.error("Somethings went wrong...!", '', { timeOut: 3000 })

                    }


                })

            }

        });


        $('#lets_talk_btn').click((e) => {
            e.preventDefault();

            if ($("#name1").val() == "") {
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.error("Please enter name...!", '', { timeOut: 3000 })

            } if ($("#phone_number").val() == "") {
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.error("Please enter mobile number...!", '', { timeOut: 3000 })

            } if ($("#email1").val() == "") {
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.error("Please enter email...!", '', { timeOut: 3000 })

            }
            else {
                var obj = new Object()
                obj.email = $("#email1").val()
                obj.name = $("#name1").val()
                obj.phone = $("#phone_number").val()
                obj.message = $("#type_message").val()
                obj.company_name = $("#company_name1").val()


                console.log(obj)




                var $request = $.ajax({
                    url: `http://35.78.201.111:3006/users/send-email-contact`,
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json",
                    data: JSON.stringify(obj),
                });

                $request.done(function (data) {

                    if (data.status) {
                        $("#sub_email").val("")
                        toastr.options.positionClass = 'toast-bottom-right';
                        toastr.success("Thanks, we connect you soon..!", '', { timeOut: 3000 })
                        $('#enquiry_form')[0].reset();

                    } else {
                        toastr.options.positionClass = 'toast-bottom-right';
                        toastr.error("Somethings went wrong...!", '', { timeOut: 3000 })

                    }


                })

            }

        });



        $('#send_proposal').click((e) => {
            e.preventDefault();

            if ($("#email3").val() == "") {
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.error("Please enter email...!", '', { timeOut: 3000 })

            }
            else {
                var obj = new Object()
                obj.email = $("#email3").val()
                obj.type = $("#type_value").val()



                console.log(obj)

                var $request = $.ajax({
                    url: `http://35.78.201.111:3006/users/send-email-services`,
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json",
                    data: JSON.stringify(obj),
                });

                $request.done(function (data) {

                    if (data.status) {
                        $("#email3").val("")
                        toastr.options.positionClass = 'toast-bottom-right';
                        toastr.success("Thanks, we connect you soon..!", '', { timeOut: 3000 })


                    } else {
                        toastr.options.positionClass = 'toast-bottom-right';
                        toastr.error("Somethings went wrong...!", '', { timeOut: 3000 })

                    }


                })

            }

        });





    });
</script>

